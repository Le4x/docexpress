// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("POSTGRES_URL")
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  emailVerified DateTime?
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Subscription
  subscription      Subscription?
  stripeCustomerId  String?        @unique

  // Usage tracking
  documents         Document[]
  monthlyUsage      MonthlyUsage[]

  // For Pro plan
  organization      Organization?  @relation(fields: [organizationId], references: [id])
  organizationId    String?
  organizationRole  OrganizationRole?

  // NextAuth
  accounts          Account[]
  sessions          Session[]

  @@index([email])
  @@index([stripeCustomerId])
}

// NextAuth required models
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Subscription {
  id                   String   @id @default(cuid())
  userId               String   @unique
  user                 User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  plan                 String   @default("free") // 'free', 'pass', 'pro'
  status               String   @default("active") // 'active', 'canceled', 'past_due', 'trialing'

  stripeSubscriptionId String?  @unique
  stripePriceId        String?

  currentPeriodStart   DateTime @default(now())
  currentPeriodEnd     DateTime @default(now())
  cancelAtPeriodEnd    Boolean  @default(false)

  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt

  @@index([status])
}

model Document {
  id          String   @id @default(cuid())
  userId      String?
  user        User?    @relation(fields: [userId], references: [id])

  type        String   // 'lettre-demission-cdi', etc.
  tier        String   // 'basic', 'standard', 'premium'

  // Payment info (for one-time purchases)
  paymentType String   @default("free") // 'free', 'subscription', 'one_time'
  stripePaymentIntentId String?

  // PDF stocké dans Vercel Blob
  blobUrl     String?
  blobPathname String?

  // Métadonnées (pas les données perso - RGPD)
  metadata    Json?    @db.JsonB

  createdAt   DateTime @default(now())
  expiresAt   DateTime?

  @@index([userId])
  @@index([createdAt])
  @@index([expiresAt])
}

model MonthlyUsage {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  month     Int      // 1-12
  year      Int
  count     Int      @default(0)

  @@unique([userId, month, year])
  @@index([year, month])
}

model Organization {
  id        String   @id @default(cuid())
  name      String
  logoUrl   String?

  users     User[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum OrganizationRole {
  OWNER
  ADMIN
  MEMBER
}
